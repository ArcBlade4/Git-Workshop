{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Sketch",
      "type": "shell",
      "command": "javac",
      "args": [
        "-cp",
        "lib/core.jar",
        "-d",
        "bin",
        "src/gamecode/*.java"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Sketch",
      "type": "shell",
      "command": "java",
      "args": [
        "-cp",
        "bin:lib/core.jar",
        "gamecode.MainSketch"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
